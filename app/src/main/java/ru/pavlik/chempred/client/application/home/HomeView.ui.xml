<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:c="urn:import:ru.pavlik.chempred.client.widgets">

    <ui:style src="home-view.css"/>

    <g:DockLayoutPanel unit="EM">
        <g:north size="5">
            <g:Label>Header</g:Label>
        </g:north>
        <g:west size="6">
            <b:VerticalButtonGroup id="menu_left" addStyleNames="{style.menu-left}">
                <b:Button id="el_c" active="true">C</b:Button>
                <b:Button id="el_o">O</b:Button>
                <b:Button id="el_p">P</b:Button>
                <b:Button id="el_s">S</b:Button>
                <b:Button id="el_n">N</b:Button>
                <b:Button id="el_cl">Cl</b:Button>
                <b:Button id="el_table">Table</b:Button>
            </b:VerticalButtonGroup>
        </g:west>
        <g:center>
            <c:DrawPanelWidget ui:field="panel" addStyleNames="{style.main-canvas}"/>
        </g:center>
        <g:east size="6">
            <b:VerticalButtonGroup id="menu_right" addStyleNames="{style.menu-right}">
                <b:Button id="line" active="true">Line</b:Button>
                <b:Button id="line_2">Line-2</b:Button>
                <b:Button id="line_3">Line-3</b:Button>
                <b:Button id="top_line">Top-Line</b:Button>
                <b:Button id="bottom_line">Bottom-Line</b:Button>
            </b:VerticalButtonGroup>
        </g:east>
        <g:south size="5">
            <g:Label>Footer</g:Label>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>