<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:c="urn:import:ru.pavlik.chempred.client.widgets">

    <ui:style src="home-view.css"/>

    <ui:import field='ru.pavlik.chempred.client.application.home.HomeConstants.*'/>

    <g:DockLayoutPanel unit="EM">
        <g:north size="5">
            <g:Label>Header</g:Label>
        </g:north>
        <g:west size="6">
            <g:FlowPanel>
                <b:VerticalButtonGroup ui:field="menuLeft" addStyleNames="{style.menu-left}" dataToggle="BUTTONS">
                    <b:RadioButton name="elementGroup" text="C" ui:field="elementC"/>
                    <b:RadioButton name="elementGroup" text="O" ui:field="elementO"/>
                    <b:RadioButton name="elementGroup" text="P" ui:field="elementP"/>
                    <b:RadioButton name="elementGroup" text="S" ui:field="elementS"/>
                    <b:RadioButton name="elementGroup" text="N" ui:field="elementN"/>
                    <b:RadioButton name="elementGroup" text="Cl" ui:field="elementCl"/>
                    <b:RadioButton name="elementGroup" text="Table" ui:field="periodicTable"/>
                </b:VerticalButtonGroup>
                <b:Button text="Clear" ui:field="clear" type="DEFAULT"/>
            </g:FlowPanel>
        </g:west>
        <g:center>
            <c:DrawPanelWidget ui:field="panel" addStyleNames="{style.main-canvas}"/>
        </g:center>
        <g:east size="6">
            <b:VerticalButtonGroup id="menu_right" addStyleNames="{style.menu-right}" dataToggle="BUTTONS">
                <b:RadioButton name="linkGroup" ui:field="linkOne" active="true">Line</b:RadioButton>
                <b:RadioButton name="linkGroup" ui:field="linkTwo">Line-2</b:RadioButton>
                <b:RadioButton name="linkGroup" ui:field="linkThree">Line-3</b:RadioButton>
                <b:RadioButton name="linkGroup" ui:field="linkTop">Top-Line</b:RadioButton>
                <b:RadioButton name="linkGroup" ui:field="linkDown">Bottom-Line</b:RadioButton>
            </b:VerticalButtonGroup>
        </g:east>
        <g:south size="5">
            <g:FlowPanel>
                <g:Button text="Train" ui:field="train"/>
                <g:Button text="Prediction" ui:field="prediction"/>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>