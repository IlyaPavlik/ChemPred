<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

    <ui:style src="compound-info.css"/>

    <b:Panel>
        <b:PanelHeader addStyleNames="{style.block-info-header}">
            <b:Heading size="H3" text="Информация о соединении"/>
        </b:PanelHeader>
        <b:PanelBody addStyleNames="{style.block-info-body}">
            <g:Grid>
                <g:row>
                    <g:cell>
                        <b>Наименование:</b>
                    </g:cell>
                    <g:customCell>
                        <bh:Span ui:field="compoundName">Неизвестное соединение</bh:Span>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>
                        <b>Брутто-формула:</b>
                    </g:cell>
                    <g:customCell>
                        <bh:Span ui:field="brutto">---</bh:Span>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>
                        <b>SMILES:</b>
                    </g:cell>
                    <g:customCell>
                        <bh:Span ui:field="smiles">---</bh:Span>
                    </g:customCell>
                </g:row>
            </g:Grid>
        </b:PanelBody>
    </b:Panel>

</ui:UiBinder>